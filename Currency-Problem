class Currency {
    // Currency information holder
    String name;
    double currencyAmount;
    double ER;
  
    // methods to set the name, currency amount and the ER 
    public void setName(String name) {
      this.name = name;
    }
    public void setCurrencyAmount(double currencyAmount) {
      this.currencyAmount = currencyAmount;
    }
    public void setER(double ER) {
      this.ER = ER;
    }
  
    // method to print all three values
    public void printDetails() {
      System.out.println(this.name);
      System.out.println(this.currencyAmount);
      System.out.println(this.ER);
    }
  }
  
  public class Main {
    public static void main(String[] args) {
      // Creating an object of the class Currency
      Currency obj = new Currency();
  
      // setting the values
      obj.setName("dollars");
      obj.setCurrencyAmount(1);
      obj.setER(3.59);
  
      // Printing values
      obj.printDetails();
    }
  }